# Backend Environment Variables
# Copy this file to .env and update values as needed

# Server Configuration
HOST=127.0.0.1
PORT=8000

# CORS Configuration (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:443

# Frontend Build Directory
FRONTEND_DIST_DIR=frontend/dist

# ArpY Module Dependencies (if using ArpY features)
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration (if needed)
MONGO_CONNECTION_URI=mongodb://localhost:27017/

# Internal Data Fetcher URL (for ArpY module)
INTERNAL_DATA_FETCHER_URL=http://localhost:18909

# Development vs Production mode
ENVIRONMENT=development
